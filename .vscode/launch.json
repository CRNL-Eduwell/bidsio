{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run GUI",
      "type": "debugpy",
      "request": "launch",
      "module": "bidsio.ui.app",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "preLaunchTask": "Generate UI Files"
    },
    {
      "name": "Run CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "bidsio.cli.main",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}